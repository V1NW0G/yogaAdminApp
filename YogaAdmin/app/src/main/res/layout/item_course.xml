<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="2dp"
    android:background="@drawable/card_border_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- CheckBox to select individual course item -->
        <CheckBox
            android:id="@+id/course_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- Vertical layout to display course details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Course Type -->
            <TextView
                android:id="@+id/course_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type: Yoga"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/course_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
            <!-- Course Date with Day of the Week -->
            <TextView
                android:id="@+id/course_day_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thursday, 2024-11-07"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Course Time -->
            <TextView
                android:id="@+id/course_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 10:00 AM"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Tutor Name -->
            <TextView
                android:id="@+id/course_tutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutor: John Doe"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Course Duration -->
            <TextView
                android:id="@+id/course_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 60 mins"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>