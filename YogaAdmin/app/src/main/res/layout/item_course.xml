<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Course Type -->
        <TextView
            android:id="@+id/course_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Yoga"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Course Date with Day of the Week -->
        <TextView
            android:id="@+id/course_day_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday, 2024-11-07"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Course Time -->
        <TextView
            android:id="@+id/course_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 10:00 AM"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Tutor Name -->
        <TextView
            android:id="@+id/course_tutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutor: John Doe"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Course Duration -->
        <TextView
            android:id="@+id/course_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 60 mins"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

</androidx.cardview.widget.CardView>