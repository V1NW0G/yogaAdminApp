<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Course Type Input -->
    <EditText
        android:id="@+id/course_type_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Type" />

    <!-- Course Date Input -->
    <EditText
        android:id="@+id/course_date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Date" />

    <!-- Course Time Input -->
    <EditText
        android:id="@+id/course_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Time" />

    <!-- Price Input -->
    <EditText
        android:id="@+id/price_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price" />

    <!-- Duration Input -->
    <EditText
        android:id="@+id/duration_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration" />

    <!-- Tutor Name Input -->
    <EditText
        android:id="@+id/tutor_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tutor Name" />

    <!-- Expand Toggle Button -->
    <ImageButton
        android:id="@+id/expand_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"
        android:contentDescription="Expand" />

    <!-- Expandable Layout -->
    <LinearLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Additional fields can go here -->

    </LinearLayout>
</LinearLayout>